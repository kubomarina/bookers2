
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <div id="error_explanation">
    <% if @user.errors.any? %>
    <font size="5"><%= @user.errors.count %>errors prohibited this obj from being saved:</font>
    <% @user.errors.full_messages.each do |message| %>
  <li><%= message %></li>
<% end %>
<% end %>
</div>
<p></p>
    <%= form_with model:@user, local:true do |f| %>
    <label for="inputName">Name</label>
    <%= f.text_field :name, class:"w-100", autofocus: true, id:"inputName" %>
    
    <p></p>
    
    <label for="inputImage">Image</label>
    <div><%= f.attachment_field :profile_image %></div>
    
    <p></p>
    
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, class:"w-100", autofocus: true, id:"inputIntroduction" %>
    
    <p></p>
    <button class="btn btn-secondary" type="submit">Update User</button>
    <% end %>
    </div>
  </div>
 </div>
</div>
 