<% if flash[:notice] %>
<% end %>

<%= render 'users/error' %>

<div class="row">
 <div class="col-md-3">
  <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",size: '100x100' %>
    <table class="table table-hover table-inverse">
     <tr>
  	  <th>name</th>
  	  <th><%= @user.name %></th>
     </tr>
    <tr>
  	 <th>introduction</th>
  	 <th><%= @user.introduction %></th>
    </tr>
    </table>

<div>
 <%= link_to edit_user_path(@user) do %>
  <i class="fas fa-user-cog btn btn-outline-secondary btn-block" ></i>
 <% end %>
</div>

<p></p>

<%= render 'books/newbook' %>

<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <% @books.each do |book| %>
    <tr>
     <td><%= link_to user_path do%>
     <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
     <% end %>
     </td>
     <td><%= link_to book_path(book.id) do %>
      <%= book.title %>
      <% end %>
     </td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
  </table>
</div>
</div>
</div>
