<% if flash[:notice]%>
<% end %>

<%= render 'books/error' %>

<%= render 'books/userinfo' %>

<div>
 <%= link_to edit_user_path(current_user.id) do %>
  <button class="fas fa-user-cog btn btn-outline-secondary btn-block"></button>
 <% end %>
</div>

<p></p>

<%= render 'books/newbook' %>

<div class="col-md-8 offset-md-1">
 <table class="table table-hover table-inverse">
  <thead>
  <h2>Books</h2>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
   <td><%= link_to user_path(book.id) do %>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
    <% end %>
   </td>
   <td><%=link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
 </table>
</div>
</div>

