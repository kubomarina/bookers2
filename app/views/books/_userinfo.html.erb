<div class="row">
<div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",size: '100x100' %>
      <table class="table table-hover table-inverse">
        <tr>
  	     <th>name</th>
